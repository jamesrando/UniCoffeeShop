@model UniCoffeeShop.Models.Product
@{
    ViewData["Title"] = "Delete Product";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@{
    var productId = Model.Id;
    var productName = Model.Name;
}

<div class="text-center">
    <h1 class="display-4" style="padding-bottom:16px">Delete Product</h1>
    <div>
        <form id="profile-form" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <p>Are you sure you want to delete @productName (@productId)?</p>
            <button id="delete-button" type="submit" class="btn btn-danger">Delete</button>
            <a id="cancel-button" type="button" class="btn btn-primary" asp-action="Index">Cancel</a>
        </form>
    </div>
</div>
